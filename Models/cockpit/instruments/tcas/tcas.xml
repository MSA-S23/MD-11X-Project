<!-- Hotspots -->

    <animation>
        <type>pick</type>
        <object-name>TCAS.knob</object-name>
        <action>
            <button>0</button>
            <button>3</button>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/transponder/inputs/knob-pos</property>
                <step>1</step>
                <min>0</min>
                <max>3</max>
                <wrap>false</wrap>
            </binding>
        </action>
        <action>
            <button>1</button>
            <button>4</button>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/transponder/inputs/knob-pos</property>
