<PropertyList>
 <path>tcas.ac</path>
 
     		  <animation>
<type>shader</type>
<shader>chrome</shader>
<texture>chrome_cockpit.png</texture>
<object-name>tcas.glass</object-name>
</animation>

         <animation>
		<name>Panel lighting</name>
		<type>material</type>
		<object-name>tcas.text</object-name>
		<emission>
			<red>1.5</red>
			<green>1.27</green>
			<blue>1</blue>
			<factor-prop>controls/lighting/pedestal-panel-norm</factor-prop>
		</emission>
	</animation>
	
			    <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
		<object-name>tcas.text</object-name>
    </effect>

    <animation>
        <type>textranslate</type>
        <object-name>digit0</object-name>
        <property>instrumentation/transponder/inputs/display[0]</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>digit1</object-name>
